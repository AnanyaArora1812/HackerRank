#include <stdio.h>
#include <stdlib.h>

int *delivery_times;
int n;

int compare(const void *a, const void *b) {
    int i = *(int *)a;
    int j = *(int *)b;

    if (delivery_times[i] == delivery_times[j])
        return i - j;

    return delivery_times[i] - delivery_times[j];
}

int main() {
    scanf("%d", &n);

    delivery_times = (int *)malloc(n * sizeof(int));
    int *indices = (int *)malloc(n * sizeof(int));

    for (int i = 0; i < n; i++) {
        int order_num, prep_time;
        scanf("%d %d", &order_num, &prep_time);
        delivery_times[i] = order_num + prep_time;
        indices[i] = i;
    }

    qsort(indices, n, sizeof(int), compare);

    for (int i = 0; i < n; i++) {
        printf("%d ", indices[i] + 1);
    }
    printf("\n");

    free(delivery_times);
    free(indices);

    return 0;
}
